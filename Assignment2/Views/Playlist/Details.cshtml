@model Assignment2.Models.PlaylistWithDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Playlist Details @Model.Name</h2>
<hr />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Tracks now on the playlist <span class="badge">@Html.DisplayFor(model => model.TracksCount)</span>
        </dt>

        <dd>
            @foreach (var item in Model.Tracks.OrderBy(i => i.Name) )
            {
               @Html.DisplayFor(modelItem => item.Name); <br />
            }
           
        </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

